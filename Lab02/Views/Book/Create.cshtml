@model Lab02.Models.Book
@{
    ViewData["Title"] = "Create";
}

<h2>Thêm mới sách</h2>
<form action="" method="POST" enctype="multipart/form-data" >
    <div class="form-group">
        <label asp-for="Title">Tên sách</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Tên sách"/>
    </div>  
    <div class="form-group">
        <label asp-for="AuthorId">Tác giả</label>
        <input type="text" class="form-control" asp-for="AuthorId" placeholder="Tác giả" />
    </div>
    <div class="form-group">
        <label asp-for="GenreId">Thể loại</label>
        <input type="text" class="form-control" asp-for="GenreId" placeholder="Thể loại" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Giá sách</label>
        <input type="text" class="form-control" asp-for="Price" placeholder="Giá sách" />
    </div>
    <div class="form-group">
        <label asp-for="TotalPage">Tổng số trang sách</label>
        <input type="text" class="form-control" asp-for="TotalPage" placeholder="Tổng số trang sách" />
    </div>
    <div class="form-group">
        <label asp-for="Image">Hình ảnh/ Poster</label>
        <input type="text" class="form-control" asp-for="Image"  />
    </div>

    <div class="form-group">
        <label asp-for="Summary">Giới thiệu ngắn</label>
        <textarea type="text" class="form-control" asp-for="Summary" placeholder="Nội dụng sơ lược ..."></textarea> 
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
</form>
